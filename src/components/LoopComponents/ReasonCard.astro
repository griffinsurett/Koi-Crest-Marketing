---
// src/components/LoopComponents/ReasonCard.astro
/**
 * Reason Card Component
 * 
 * Displays a single reason/benefit with:
 * - Numbered black badge with title
 * - Description text below
 * 
 * Used in WhyChooseUsVariant
 */

export interface Props {
  title: string;
  description?: string;
  number: number; // The reason number (1, 2, 3, etc.)
}

const { 
  title,
  description,
  number
} = Astro.props;
---

<div class="space-y-3">
  {/* Number Badge with Title */}
  <div class="inline-block bg-black text-white text-sm font-bold px-4 py-2">
    {number}. {title}
  </div>

  {/* Description */}
  {description && (
    <p class="text-gray-600 text-lg leading-relaxed">
      {description}
    </p>
  )}
</div>