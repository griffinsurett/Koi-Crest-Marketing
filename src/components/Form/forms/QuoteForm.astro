---
// src/components/Form/forms/QuoteForm.astro
/**
 * Quote Form - Astro Wrapper
 * Uses the React QuoteForm component with Formspree integration
 * Passes the current route for source tracking
 */
import QuoteFormReact from './QuoteForm.tsx';

interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const {
  title,
  description,
  className = '',
} = Astro.props;

// Get the current page path for source tracking
const sourcePage = Astro.url.pathname;
---

<div class={className}>
  {title && <h2 class="text-3xl font-bold mb-3">{title}</h2>}
  {description && <p class="text-gray-600 mb-8">{description}</p>}

  <QuoteFormReact client:idle sourcePage={sourcePage} />
</div>