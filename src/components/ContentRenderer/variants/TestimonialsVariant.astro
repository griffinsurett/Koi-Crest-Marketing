---
// src/components/ContentRenderer/variants/TestimonialsVariant.astro
/**
 * Testimonials Variant - Customer testimonials in grid layout
 * Features: SectionHeader integration, Button CTA, 1-4 column grid
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import TestimonialCard from "@/components/LoopComponents/TestimonialCard.astro";
import SectionHeader from "@/components/SectionHeader";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3 | 4;
}

const {
  items = [],
  title,
  description,
  className = "",
  columns = 2,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

const viewAllText = `All ${collectionTitle || "Testimonials"}`;

const columnClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
};
---

<section id={id} class={`bg-MainDark text-white py-20 ${className}`}>
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header with CTA Button -->
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6 mb-16">
      {(title || description) && (
        <SectionHeader
          subtitle={title}
          title={description || ""}
          titleTag="h2"
          subtitleClass="text-gray-400 h6 tracking-wider"
          titleClass="text-5xl lg:text-6xl font-bold leading-tight max-w-4xl text-white"
          client:load
        />
      )}

      {shouldShowCollectionCTA(collectionUrl, items.length) && (
        <div class="flex-shrink-0">
          <Button
            href={collectionUrl}
            variant="secondary"
            size="lg"
            client:load
          >
            {viewAllText}
          </Button>
        </div>
      )}
    </div>

    <!-- Testimonials Grid -->
    {items.length > 0 && (
      <div class={`grid ${columnClasses[columns]} gap-6`}>
        {items.map((item) => (
          <TestimonialCard {...item} />
        ))}
      </div>
    )}
  </div>
</section>