---
// src/components/ContentRenderer/variants/ContactVariant.astro
/**
 * Contact Variant - Contact information with form and image
 * Features: 
 * - Horizontal contact cards at top (1-3 columns)
 * - Two-column layout: form on left, image on right
 * - Social media below form
 */
import ContentRenderer from "../ContentRenderer.astro";
import type { BaseVariantProps } from "../ContentRenderer.types";
import ContactCard from "@/components/LoopComponents/ContactCard.astro";
import Button from "@/components/Button/Button";
import { query } from "@/utils/query";
import { shouldShowCollectionCTA } from "../utils/helpers";
import ContactForm from "@/components/Form/forms/ContactForm";
import { Image } from "astro:assets";
import featuredImageSrc from "@/assets/placeholder.svg";
import { formatPhoneNumber } from "@/utils/string";

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3;
}

const {
  items = [],
  title,
  description,
  featuredImage,
  className = "",
  columns = 3,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

const viewAllText = `Contact Us`;

const columnClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
};
---

<section id={id} class={`w-full ${className}`}>
  <div class="mx-auto">
    {/* Header */}
    {
      (title || description) && (
        <div class="text-center mb-12">
          {title && (
            <h2 class="text-3xl md:text-4xl font-bold text-MainDark mb-4">
              {title}
            </h2>
          )}
          {description && (
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              {description}
            </p>
          )}
        </div>
      )
    }

    {/* Contact Cards - Horizontal Layer */}
    {
      items.length > 0 && (
        <div class={`flex ${columnClasses[columns]} flex-col lg:flex-row container mx-auto px-4 max-w-7xl py-16 gap-6 bg-MainLight`}>
          {items.map((item) => {
            const linkPrefix = item.linkPrefix ?? item.data?.linkPrefix;
            const rawTitle = item.title ?? item.data?.title;
            const url = item.url ?? (linkPrefix ? `${linkPrefix}${rawTitle}` : undefined);
            const itemKey =
              item.id ?? item.slug ?? item.data?.id ?? item.data?.slug;
            const displayTitle =
              typeof rawTitle === "string" &&
              (itemKey === "phone" || (typeof linkPrefix === "string" && linkPrefix.startsWith("tel")))
                ? formatPhoneNumber(rawTitle)
                : rawTitle;
            return (
              <ContactCard {...item} href={url} title={displayTitle} itemKey={itemKey} />
            );
          })}
        </div>
      )
    }

    {/* Form and Image Row */}
    <div class="w-full bg-gray-50">
      <div class="container mx-auto px-5 py-5 lg:py-10 flex flex-col justify-between items-start lg:flex-row gap-8 lg:gap-16">
      {/* Left: Contact Form */}
      <div class="w-full lg:w-1/2">
        <ContactForm client:visible />
        
        {/* Social Media Below Form */}
        <!-- <div class="mt-8">
          <ContentRenderer
            query={query("social-media")}
            variant="SocialMediaVariant"
            title="Follow Us"
            size="lg"
            alignment="left"
          />
        </div> -->
      </div>
      <div class="w-full lg:w-1/2 lg:sticky lg:top-0">
        {/* Right: Featured Image */}
      <Image
        src={featuredImageSrc}
        alt="Contact Us"
        class="w-full h-auto rounded-lg object-cover order-1 lg:order-2"
        sizes="(max-width: 768px) 100vw, 50vw"
        loading={"lazy"}
      />
      </div>
      </div>
    </div>

    {/* Optional CTA Button */}
    {
      shouldShowCollectionCTA(collectionUrl, items.length) && (
        <div class="mt-12 text-center">
          <Button
            href={collectionUrl}
            rightIcon="lu:arrow-right"
            variant="primary"
            size="lg"
          >
            {viewAllText}
          </Button>
        </div>
      )
    }
  </div>
</section>
