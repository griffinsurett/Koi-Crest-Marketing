---
// src/components/ContentRenderer/variants/PortfolioVariant.astro
/**
 * Portfolio Variant - Project showcase grid
 * 
 * Features:
 * - Header with subtitle, title, and "View All" button
 * - 3-column grid of project cards
 * - Category badges (black pills)
 * - Service tags (gray pills)
 * - Description with left border accent
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import PortfolioCard from "@/components/LoopComponents/PortfolioCard.astro";
import SectionHeader from "@/components/SectionHeader";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3;
}

const {
  items = [],
  title,
  heading,
  description,
  className = "",
  columns = 3,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

const viewAllText = `View All ${collectionTitle || "Projects"}`;

const columnClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
};
---

<section id={id} class={`bg-white py-20 ${className}`}>
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header with CTA Button -->
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-6 mb-16">
      {(title || description) && (
        <SectionHeader
          subtitle={title}
          title={heading || description || ""}
          titleTag="h2"
          subtitleClass="text-gray-500 text-sm font-semibold uppercase tracking-wider mb-2"
          align="left"
        />
      )}

      {shouldShowCollectionCTA(collectionUrl, items.length) && (
        <div class="flex-shrink-0">
          <Button
            href={collectionUrl}
            variant="primary"
            size="lg"
          >
            {viewAllText}
          </Button>
        </div>
      )}
    </div>

    <!-- Portfolio Grid -->
    {items.length > 0 && (
      <div class={`grid ${columnClasses[columns]} gap-8`}>
        {items.map((item) => (
          <PortfolioCard {...item} />
        ))}
      </div>
    )}
  </div>
</section>
