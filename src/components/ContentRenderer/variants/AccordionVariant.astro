---
// src/components/ContentRenderer/variants/AccordionVariant.astro
import type { BaseVariantProps } from "../ContentRenderer.types";
import Accordion from "@/components/LoopTemplates/Accordion";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  allowMultiple?: boolean;
}

const {
  items = [],
  title,
  description,
  className = "",
  allowMultiple = false,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

const viewAllText = `View All ${collectionTitle || ""}`.trim();
const accordionId = id || 'accordion';
---

<section id={id} class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && (
        <p class="text-lg text-gray-600 max-w-3xl">{description}</p>
      )}
    </div>
  )}

  {items.length > 0 && (
    <>
      {/* Render Content components server-side in hidden slots */}
      {items.map((item, index) => (
        <div 
          id={`${accordionId}-content-${index}`} 
          style="display: none;" 
          data-accordion-content={index}
        >
          {item.Content ? (
            <item.Content />
          ) : item.content ? (
            <div set:html={item.content} />
          ) : null}
        </div>
      ))}

      {/* Pass item metadata to React, it will grab rendered content via slots */}
      <Accordion 
        items={items.map((item, index) => ({
          slug: item.slug,
          title: item.title || 'Untitled',
          description: item.description,
          contentSlotId: `${accordionId}-content-${index}`,
        }))}
        allowMultiple={allowMultiple}
        client:visible
      />
    </>
  )}

  {shouldShowCollectionCTA(collectionUrl, items.length) && (
    <div class="mt-12 text-center">
      <Button
        href={collectionUrl}
        rightIcon="lu:arrow-right"
        variant="primary"
        size="lg"
      >
        {viewAllText}
      </Button>
    </div>
  )}
</section>