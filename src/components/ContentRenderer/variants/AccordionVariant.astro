---
// src/components/ContentRenderer/variants/AccordionVariant.astro
import type { BaseVariantProps } from "../ContentRenderer.types";
import Accordion from "@/components/LoopTemplates/Accordion";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  allowMultiple?: boolean;
}

const {
  items = [],
  title,
  description,
  className = "",
  allowMultiple = false,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

// Process items: get HTML from Content components
const processedItems = await Promise.all(
  items.map(async (item) => {
    let renderedContent: string | undefined;
    
    if (item.Content) {
      try {
        const Component = item.Content;
        const result = await Component({});
        
        if (typeof result === 'object' && result !== null && 'html' in result) {
          renderedContent = result.html;
        } else {
          renderedContent = String(result);
        }
      } catch (error) {
        console.error('Failed to render Content component:', error);
        renderedContent = item.content;
      }
    }
    
    // âœ… Spread original item, override specific fields
    return {
      ...item,                                              // Keep all original props
      content: renderedContent || item.content || item.description,  // Override content
      Content: undefined,                                   // Remove Content component
    };
  })
);

const viewAllText = `View All ${collectionTitle || ""}`.trim();
---

<section id={id} class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && (
        <p class="text-lg text-gray-600 max-w-3xl">{description}</p>
      )}
    </div>
  )}

  {processedItems.length > 0 && (
    <Accordion 
      items={processedItems} 
      allowMultiple={allowMultiple} 
      client:visible 
    />
  )}

  {shouldShowCollectionCTA(collectionUrl, items.length) && (
    <div class="mt-12 text-center">
      <Button
        href={collectionUrl}
        rightIcon="lu:arrow-right"
        variant="primary"
        size="lg"
      >
        {viewAllText}
      </Button>
    </div>
  )}
</section>