---
// src/components/LoopTemplates/Menu/MenuList.astro
/**
 * Menu List Component
 * 
 * Renders <ul> wrapper for menu items.
 * Handles styling for different nesting levels.
 */
import MenuItem from '@/components/LoopComponents/Menu/MenuItem.astro';

export interface Props {
  items: any[];
  level?: number;
}

const { items = [], level = 0 } = Astro.props;
const isTopLevel = level === 0;

const nestedClasses = `
  relative flex flex-col min-w-[220px] bg-gray-100 shadow-lg py-0 z-50
  border border-gray-100
`;
---

<ul 
  class={isTopLevel 
    ? 'flex items-center gap-2' 
    : nestedClasses
  }
>
  {items.map(item => (
    <MenuItem {...item} level={level} />
  ))}
</ul>
