---
// src/components/LoopTemplates/Menu/MenuDropdown.astro
/**
 * Menu Dropdown Component
 * 
 * Dropdown/submenu that appears on hover.
 * Uses semantic HTML with ARIA for accessibility.
 */
import MenuList from './MenuList.astro';

export interface Props {
  items: any[];
  level?: number;
  parentSlug?: string;
}

const { items = [], level = 1, parentSlug = 'menu' } = Astro.props;
const dropdownId = `dropdown-${parentSlug}-${level}`;
const isFirstLevel = level === 1;
const positionClasses = isFirstLevel
  ? 'top-full left-0 mt-0'
  : 'top-0 left-full';
---

<div 
  id={dropdownId}
  class={`menu-dropdown hidden absolute ${positionClasses}`}
>
  <MenuList items={items} level={level} />
</div>
