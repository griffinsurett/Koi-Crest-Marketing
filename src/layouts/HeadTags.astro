---
// src/layouts/HeadTags.astro
/**
 * Head Tags Component
 * 
 * Placeholder for additional head-level tags and scripts.
 * Can include:
 * - Analytics scripts (Google Analytics, Plausible, etc.)
 * - Font preloads
 * - External script tags
 * - Additional meta tags
 * 
 * Separated into its own component for easier maintenance
 * and conditional loading of third-party scripts.
 */
// import LanguageDetectionScript from "@/components/preferences/language/LanguageDetectionScript.astro";
---
<!-- <LanguageDetectionScript /> -->

<!-- Montserrat for headings -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  rel="preload"
  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&display=swap"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
/>
<noscript>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&display=swap"
    rel="stylesheet"
  />
</noscript>

<!-- Preload Outfit variable font (local file served from /public/fonts) -->
<link
  rel="preload"
  href="/fonts/Outfit/Outfit-VariableFont_wght.ttf"
  as="font"
  type="font/ttf"
  crossorigin
/>

<!-- Additional head tags can be added here as needed -->
<!-- Example: Google Analytics, Plausible, font preloads, etc. -->
