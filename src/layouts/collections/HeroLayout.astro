---
// src/layouts/HeroLayout.astro
/**
 * Hero Layout - Reusable Hero Section
 * 
 * Flexible hero section that adapts based on available data:
 * - Full hero with background image and gradient overlay
 * - Simple header when no image is available
 * 
 * Features:
 * - Responsive sizing (50-60vh on image hero)
 * - Dark gradient overlay for text readability
 * - Metadata display (date, author, reading time)
 * - Icon integration for metadata
 */

import { getAuthorName, getImageSrc } from './helpers/layoutHelpers';

export interface HeroLayoutProps {
  title: string;
  description?: string;
  bannerImage?: any;
  featuredImage?: any;
  publishDate?: Date | string;
  author?: any;
  readingTime?: number | string;
  className?: string;
}

const {
  title,
  description,
  bannerImage,
  featuredImage,
  publishDate,
  author,
  readingTime,
  className = '',
} = Astro.props as HeroLayoutProps;

// Use bannerImage for hero, fallback to featuredImage
const bannerImageSrc = getImageSrc(bannerImage || featuredImage);
const hasHeroImage = !!bannerImageSrc;
---

{hasHeroImage ? (
  /* Hero section with background image */
  <section class={`relative ${className}`}>
    <div class="relative min-h-[50vh] md:min-h-[60vh] flex items-center justify-center overflow-hidden">
      {/* Background image with gradient overlay */}
      <div class="absolute inset-0 -z-10">
        <img 
          src={bannerImageSrc} 
          alt={bannerImage?.alt || featuredImage?.alt || title}
          class="w-full h-full object-cover"
        />
        {/* Dark gradient for text readability */}
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/50 to-black/70"></div>
      </div>

      {/* Hero content */}
      <div class="relative container mx-auto px-4 py-16 md:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 drop-shadow-lg">
            {title}
          </h1>
          
          {description && (
            <p class="text-xl md:text-2xl mb-8 opacity-95 drop-shadow-md">
              {description}
            </p>
          )}
          
          {/* Metadata row with icons */}
          {(publishDate || author || readingTime) && (
            <div class="flex flex-wrap justify-center gap-4 md:gap-6 text-sm md:text-base text-white/90">
              {publishDate && (
                <time 
                  datetime={new Date(publishDate).toISOString()}
                  class="flex items-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {new Date(publishDate).toLocaleDateString()}
                </time>
              )}
              {author && (
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  By {getAuthorName(author)}
                </span>
              )}
              {readingTime && (
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {readingTime} min read
                </span>
              )}
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
) : (
  /* Simple header (no hero image) */
  <header class={`container mx-auto px-4 py-12 md:py-16 ${className}`}>
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
      
      {description && (
        <p class="text-xl text-gray-600 mb-6">{description}</p>
      )}
      
      {/* Metadata without icons */}
      {(publishDate || author || readingTime) && (
        <div class="flex flex-wrap gap-4 text-sm text-gray-500">
          {publishDate && (
            <time datetime={new Date(publishDate).toISOString()}>
              {new Date(publishDate).toLocaleDateString()}
            </time>
          )}
          {author && (
            <span>By {getAuthorName(author)}</span>
          )}
          {readingTime && (
            <span>{readingTime} min read</span>
          )}
        </div>
      )}
    </div>
  </header>
)}