---
// src/layouts/Header.astro
/**
 * Site Header with Navigation
 */
import ContentRenderer from "@/components/ContentRenderer/ContentRenderer.astro";
import { query, sortBy } from "@/utils/query";
import { siteData } from "@/content/siteData";
import { Image } from "astro:assets";
import Icon from "@/components/Icon";
---

<header class="z-[40] bg-white border-b border-gray-200 shadow-sm">
  <div
    class="container mx-auto px-4 max-w-7xl py-2 flex items-center justify-between"
  >
    <div class="flex items-center justify-between w-full">
      <!-- Logo -->
      <a
        href="/"
        class="text-2xl font-bold transition-colors flex flex-col items-center justify-center gap-0"
      >
        <Image
          src={siteData.Logo}
          alt={`${siteData.title} Logo`}
          width={100}
          height={100}
          quality={90}
          format="webp"
          loading="eager"
          decoding="async"
          class="h-auto w-18 rotate-center"
        />
        <span class="text-lg leading-none uppercase m-0 p-0"
          >{siteData.title}</span
        >
        <span class="text-sm leading-3 text-gray-400">Marketing</span>
      </a>

      <!-- Navigation Menu using query -->
      <ContentRenderer
        query={query("menu-items")
          .where((entry) => {
            const menus = entry.data.menu;
            if (Array.isArray(menus)) {
              return menus.some((m) => m.id === "main-menu");
            }
            return menus?.id === "main-menu";
          })
          .orderBy(sortBy("order", "asc"))}
        variant="MenuVariant"
      />

      <!-- Phone Number -->
      <a
        href="tel:732-362-6476"
        class="hidden lg:flex items-center space-x-2 text-gray-500 hover:text-black transition font-medium"
      >
        <!-- Phone Number -->
        <Icon icon="fa:phone" size="lg" className="transform text-MainDark" />
        <span class="text-lg hidden lg:block">732-362-6476</span>
      </a>
    </div>
  </div>
</header>
