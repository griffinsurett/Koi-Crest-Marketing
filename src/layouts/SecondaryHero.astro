---
// src/layouts/SecondaryHero.astro
/**
 * Secondary Hero Layout - Simple, Centered Hero
 * 
 * Clean hero section for inner pages (About, Services, Blog, etc.)
 * Features:
 * - Centered title and description
 * - Optional background color
 * - Optional metadata (date, author, reading time)
 * - Responsive padding
 */

import { getAuthorName } from '@/layouts/collections/helpers/layoutHelpers';

export interface Props {
  title: string;
  description?: string;
  publishDate?: Date | string;
  author?: string | { collection: string; id: string };
  readingTime?: number;
  className?: string;
  bgColor?: string;
  textColor?: string;
}

const {
  title,
  description,
  publishDate,
  author,
  readingTime,
  className = "",
  bgColor = "bg-gray-50",
  textColor = "text-gray-900",
} = Astro.props;

// Get author name if provided
const authorName = author ? await getAuthorName(author) : null;
---

<section class={`${bgColor} py-16 md:py-24 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Title -->
      <h1 class={`text-4xl md:text-5xl lg:text-6xl font-bold mb-6 ${textColor}`}>
        {title}
      </h1>
      
      <!-- Description -->
      {description && (
        <p class={`text-lg md:text-xl leading-relaxed ${textColor === 'text-gray-900' ? 'text-gray-600' : 'text-gray-300'}`}>
          {description}
        </p>
      )}
      
      <!-- Metadata row (optional) -->
      {(publishDate || author || readingTime) && (
        <div class="flex flex-wrap justify-center gap-4 md:gap-6 text-sm md:text-base text-gray-500 mt-8">
          {publishDate && (
            <time 
              datetime={new Date(publishDate).toISOString()}
              class="flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {new Date(publishDate).toLocaleDateString()}
            </time>
          )}
          
          {authorName && (
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {authorName}
            </span>
          )}
          
          {readingTime && (
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              {readingTime} min read
            </span>
          )}
        </div>
      )}
    </div>
  </div>
</section>